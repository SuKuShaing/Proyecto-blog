---
import { Image } from 'astro:assets';


interface Props {
    name: string;
    avatar: string;
    twitter: string;
    linkedin: string;
    github: string;
    bio: string;
    subtitle: string;
    slug: string;
}

const { name, avatar, slug, twitter, linkedin, github, bio, subtitle } = Astro.props;

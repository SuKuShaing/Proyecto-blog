---
import { Formatter } from "@utils/formatters";

interface Props {
	title: string;
	description?: string;
	image?: string;
	date?: Date;
}

const { title, date, image, description } = Astro.props;
---

<div class="lg:flex">
	<img
		class="object-cover w-full h-56 rounded-lg lg:w-64"
		src={image ||
			"https://images.unsplash.com/photo-1515378960530-7c0da6231fb1?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"}
		alt={`imagen de portada del artÃ­culo ${title}`}
	/>

	<div class="flex flex-col justify-between py-6 lg:mx-6">
		<a
			href="#"
			class="text-xl font-semibol hover:underline text-white"
		>
			{title}
		</a>
		{
			description && (
				<p class="mt-2 text-gray-400">{description}</p>
			)
		}

		<span class="text-sm text-gray-300">{ date ? Formatter.formatDate(date) : "Fecha no disponible" }</span>
	</div>
</div>
